{
 "compilerOptions": {
  "target": "esnext",
  "useDefineForClassFields": true,
  "module": "esnext",
  "moduleResolution": "node",
  "strict": true,
  "sourceMap": true,
  "resolveJsonModule": true,
  "esModuleInterop": true,
  "declaration": true,
  "skipLibCheck": false,
  "composite": true,
  "incremental": true
 },
 "references": [
  {
   "path": "./libs/vite",
   "name": "@websublime/vite"
  },
  {
   "path": "packages/ws-essential",
   "name": "@websublime/ws-essential"
  },
  {
   "path": "packages/ws-globals",
   "name": "@websublime/ws-globals"
  },
  {
   "path": "packages/ws-sublime",
   "name": "@websublime/ws-sublime"
  }
 ],
 "exclude": [
  "**/tests/**",
  "**/dist/**",
  "**/.nuxt/**"
 ]
}